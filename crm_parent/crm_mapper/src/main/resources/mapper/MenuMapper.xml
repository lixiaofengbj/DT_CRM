<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.dt.mapper.MenuMapper">

    <resultMap id="BaseResultMap" type="com.dt.pojo.CrmMenu">
        <id column="id" jdbcType="INTEGER" property="id"/>
        <result column="pid" jdbcType="INTEGER" property="pid"/>
        <result column="menu_name" jdbcType="VARCHAR" property="menuName"/>
        <result column="synopsis" jdbcType="VARCHAR" property="synopsis"/>
        <result column="code" jdbcType="VARCHAR" property="code"/>
        <result column="href" jdbcType="VARCHAR" property="href"/>
    </resultMap>

    <select id="findList" resultMap="BaseResultMap">
        SELECT * FROM crm_menu WHERE name LIKE CONCAT('%',#{menuName},'%' )
    </select>

</mapper>